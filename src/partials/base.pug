doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://use.typekit.net/kby7upf.css")
        link(rel="stylesheet", href="/style.css")
        title SMOYA.ME | DESIGNER
        script(src="https://identity.netlify.com/v1/netlify-identity-widget.js")
    body
        canvas.orb-canvas
        .container(data-scroll-container)
            include _header.pug
            main.main#swup.transition-fade(data-scroll-section)
                !=content
            include _footer.pug
        #cursor(aria-hidden="true" data-scroll-sticky)
            .cursor__circle(aria-hidden="true")
        script. 
            if (window.netlifyIdentity) {
                window.netlifyIdentity.on("init", user => {
                if (!user) {
                    window.netlifyIdentity.on("login", () => {
                    document.location.href = "/admin/";
                    });
                }
                });
            }
        include _scripts.pug